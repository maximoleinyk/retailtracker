<div class="page page-block">
    <header>{{i18n.forgotPassword}}</header>
    <section>
        <div class="warning" data-validation="generic" data-hide></div>
        <form>
            <div class="form-group">
                <label for="email">{{i18n.email}}</label>
                <input type="email" id="email" name="email" data-value="model.email" class="form-control"
                       placeholder="Почтовый адрес" title="Почтовый адрес" autofocus/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success center-block" data-disable-on-sync>{{i18n.send}}</button>
            </div>
        </form>
    </section>
    <footer class="text-center">
        <a href="/login">{{i18n.iRememberedPassword}}!</a>
    </footer>
</div>
