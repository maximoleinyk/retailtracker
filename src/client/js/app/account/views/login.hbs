<div class="page page-block">
    <header>{{i18n.entrance}}</header>
    <section>
        <div class="warning" data-validation="generic" data-hide></div>
        <form data-submit="login">
            <div class="form-group">
                <label for="email">{{i18n.login}}</label>
                <input type="email" id="login" name="login" class="form-control" placeholder="{{i18n.enterYourEmail}}"
                       title="{{i18n.emailAddress}}" data-bind autofocus/>

                <div class="help-block" data-validation="login"></div>
            </div>
            <div class="form-group">
                <label for="email">{{i18n.password}}</label>
                <input type="password" id="password" name="password" class="form-control"
                       placeholder="{{i18n.password}}" title="{{i18n.password}}" data-bind/>

                <div class="help-block" data-validation="password"></div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success center-block" data-disable-on-sync>{{i18n.enter}}</button>
            </div>
        </form>
    </section>
    <footer class="text-center">
        <a href="/forgot">{{i18n.forgotPassword}}?</a>
    </footer>
</div>
