<div class="page-block">
    <header>Вход</header>
    <section>
        <div class="warning" data-validation="generic" data-hide></div>
        <form>
            <div class="form-group">
                <label for="email">Логин</label>
                <input type="email" id="login" name="login" data-value="model.login" class="form-control"
                       placeholder="Введите свой email" title="Почтовый адрес" autofocus/>
                <div class="help-block" data-validation="login"></div>
            </div>
            <div class="form-group">
                <label for="email">Пароль</label>
                <input type="password" id="password" name="password" data-value="model.password"
                       class="form-control" placeholder="Пароль" title="Пароль"/>
				<div class="help-block" data-validation="password"></div>
            </div>
            <button type="submit" class="btn btn-success center-block">Войти</button>
        </form>
    </section>
    <footer class="text-center">
        <a href="/page/account/forgot">Забыли пароль?</a>
    </footer>
</div>
