<div class="page-title">
    <div class="title">
        <div>
			{{#if isNew}}
				{{i18n.storeCreation}}
			{{else}}
				{{i18n.storeEditing}}
			{{/if}}
        </div>
        <a href="/stores" class="link-back">{{i18n.stores}}</a>
    </div>
</div>
<form data-submit="submit">
    <div class="page-section">
        <div class="col col-half">
            <div class="form-group">
                <label for="name" class="required">{{i18n.name}}</label>

                <div class="group">
                    <input type="text" id="name" name="name" class="form-control" data-bind data-focus/>

                    <div class="help-block" data-validate="name" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="manager" class="required">{{i18n.manager}}</label>

                <div class="group">
                    <input type="hidden" id="manager" name="manager" class="form-control" data-id="managerSelect"
                           data-placeholder="{{i18n.selectEmployee}}" data-bind/>

                    <div class="help-block" data-validate="manager" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="priceList" class="required">{{i18n.priceList}}</label>

                <div class="group">
                    <input type="hidden" id="priceList" name="priceList" class="form-control"
                           data-id="priceListSelect"
                           data-placeholder="{{i18n.selectPriceList}}" data-bind/>

                    <div class="help-block" data-validate="priceList" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="warehouse">{{i18n.warehouse}}</label>

                <div class="group">
                    <input type="hidden" id="warehouse" name="warehouse" class="form-control"
                           data-id="warehouseSelect"
                           data-placeholder="{{i18n.selectWarehouse}}" data-optional="{{i18n.add}}" data-bind/>

                    <div class="help-block" data-validate="warehouse" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="address">{{i18n.address}}</label>

                <div class="group">
                    <input type="text" id="address" name="address" class="form-control"
                           data-optional="{{i18n.add}}" data-bind/>

                    <div class="help-block" data-validate="address" data-bind></div>
                </div>
            </div>
            <div class="form-group no-bottom border">
                <label for="description">{{i18n.description}}</label>

                <div class="group">
                    <textarea id="description" name="description" rows="5" class="form-control"
                              data-optional="{{i18n.add}}" data-bind></textarea>
                </div>
            </div>
            <div data-region="inviteeList"></div>
        </div>
    </div>
    <div class="page-section">
        <div class="actions">
            <button type="submit" class="btn btn-primary" data-auto-disable>
				{{#if isNew}}
					{{i18n.create}}
				{{else}}
					{{i18n.save}}
				{{/if}}
            </button>
            <a href="/stores" class="btn btn-link">{{i18n.cancel}}</a>
        </div>
    </div>
</form>
