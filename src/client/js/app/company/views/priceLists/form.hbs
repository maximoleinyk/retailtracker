<div class="page-title">
    <div class="title">
        <div>
			{{#if isNew}}
				{{i18n.priceListCreation}}
			{{else}}
				{{i18n.priceListEditing}}
			{{/if}}
        </div>
        <a href="/pricelists" class="link-back">{{i18n.priceLists}}</a>
    </div>
</div>
<form data-submit="save">
    <div class="page-section">
        <div class="col col-half">
            <div class="form-group">
                <label for="name" class="required">{{i18n.name}}</label>

                <div class="group">
                    <input type="text" id="name" name="name" class="form-control" data-bind data-focus/>

                    <div class="help-block" data-validate="name" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="currency" class="required">{{i18n.currency}}</label>

                <div class="group">
                    <input type="hidden" id="currency" name="currency" class="form-control half"
                           data-id="currencySelect"
                           data-placeholder="{{i18n.selectCurrency}}" data-bind/>

                    <div class="help-block" data-validate="currency" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="formula" class="required">{{i18n.formula}}</label>

                <div class="group">
                    <input type="hidden" id="formula" name="formula" class="form-control"
                           data-id="formulaSelect" data-placeholder="{{i18n.formula}}" data-bind/>

                    <div class="help-block" data-validate="formula" data-bind></div>
                </div>
            </div>
            <div class="form-group no-bottom border">
                <label for="description">{{i18n.description}}</label>

                <div class="group">
                    <textarea id="description" name="description" rows="5" class="form-control"
                              data-optional="{{i18n.add}}"
                              data-bind></textarea>
                </div>
            </div>
            <div class="form-group no-bottom border" data-region="itemsWrapper"></div>
        </div>
    </div>
    <div class="page-section">
        <div class="col col-stretch">
            <div class="form-group no-bottom border">
                <div data-region="gridWraper"></div>
                <div class="help-block" data-bind="model" data-validate="items"></div>
            </div>
        </div>
    </div>
    <div class="page-section">
        <div class="actions">
			{{#if id}}
                <button type="submit" class="btn btn-primary" data-auto-disable>{{i18n.save}}</button>
			{{else}}
                <button type="submit" class="btn btn-primary" data-auto-disable>{{i18n.create}}</button>
                <a href="/pricelists" class="btn btn-link">{{i18n.cancel}}</a>
			{{/if}}
        </div>
    </div>
</form>
