<div class="row page-title">
    <div class="col-md-12">
        <h3>{{i18n.nomenclatureList}}</h3>
        <a href="/page/company/" class="link-back" data-url-catch>{{i18n.back}}</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a href="/nomenclature/create" class="btn btn-default">{{i18n.createNomenclature}}</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {{#if items.length}}
            <ul>
                {{#each items}}
                    <li>
                        <div class="item">
                            <h5 class="title">
                                <a href="/nomenclature/{{id}}/edit" style="color:#4183c4">{{name}}</a>
                            </h5>
                            <ul>
                                {{#each attributes}}
                                    <li>{{key}}: <strong>{{value}}</strong></li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p class="text-center">{{i18n.nomenclatureEmptyListText}}</p>
        {{/if}}
    </div>
</div>