<div class="page-title">
    <div class="title">{{i18n.newNomenclature}}</div>
    <a href="/nomenclature" class="link-back">{{i18n.nomenclature}}</a>
</div>
<form data-submit="submit">
    <div class="page-section">
        <div class="col col-half">
            <div class="form-group">
                <label for="name" class="required">{{i18n.name}}</label>

                <div class="group">
                    <input type="text" id="name" name="name" class="form-control" data-bind data-focus/>

                    <div class="help-block" data-validate="name" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="article" class="required">{{i18n.article}}</label>

                <div class="group">
                    <input type="text" id="article" name="article" class="form-control quarter" data-bind/>

                    <div class="help-block" data-validate="article" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="uom" class="required">{{i18n.unitOfMeasurement}}</label>

                <div class="group">
                    <input type="hidden" id="uom" name="uom" class="form-control half" data-id="uomSelect" data-bind/>

                    <div class="help-block" data-validate="uom" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="productGroup" class="required">{{i18n.productGroup}}</label>

                <div class="group">
                    <input type="hidden" id="productGroup" name="productGroup" class="form-control half"
                           data-id="productGroupSelect" data-bind/>

                    <div class="help-block" data-validate="productGroup" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="manufacturer">{{i18n.manufacturer}}</label>

                <div class="group">
                    <input type="text" id="manufacturer" name="manufacturer" class="form-control"
                           data-optional="{{i18n.add}}" data-bind/>

                    <div class="help-block" data-validate="manufacturer" data-bind></div>
                </div>
            </div>
            <div class="form-group">
                <label for="description">{{i18n.description}}</label>

                <div class="group">
                    <textarea id="description" name="description" rows="5" class="form-control"
                              data-optional="{{i18n.add}}" data-bind></textarea>
                </div>
            </div>
            <div class="form-group">
                <label>{{i18n.attributes}}</label>

                <div class="group" data-region="attributes"></div>
            </div>
            <div class="form-group no-bottom border">
                <label>{{i18n.barcodes}}</label>

                <div class="group" data-region="barcodes"></div>
            </div>
        </div>
    </div>
    <div class="page-section">
        <div class="actions">
            <button type="submit" class="btn btn-primary" data-auto-disable>
				{{#if isNew}}
					{{i18n.create}}
				{{else}}
					{{i18n.save}}
				{{/if}}
            </button>
            <a href="/nomenclature" class="btn btn-link" data-catch-url>{{i18n.cancel}}</a>
        </div>
    </div>
</form>
