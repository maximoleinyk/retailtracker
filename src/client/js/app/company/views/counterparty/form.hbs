<div class="page-section">
    <div class="col col-2thirds">
        <fieldset>
            <div class="form-group">
                <label for="name" class="col-md-4 control-label">{{i18n.name}}</label>

                <div class="col-md-4">
                    <input type="text" id="name" name="name" class="form-control" data-bind data-focus/>

                    <div class="help-block" data-validation="name"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="phone" class="col-md-4 control-label">{{i18n.phone}}</label>

                <div class="col-md-4">
                    <input type="text" id="phone" name="phone" class="form-control" data-bind/>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-md-4 control-label">{{i18n.email}}</label>

                <div class="col-md-4">
                    <input type="text" id="email" name="email" class="form-control" data-bind/>
                </div>
            </div>
        </fieldset>
    </div>
</div>
