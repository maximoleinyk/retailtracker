<div class="page-title">
    <div class="title">
        <div>
			{{#if isNew}}
				{{i18n.priceListTemplateCreation}}
			{{else}}
				{{i18n.priceListTemplateEditing}}
			{{/if}}
        </div>
        <a href="/templates" class="link-back">{{i18n.priceListTemplates}}</a>
    </div>
</div>
<form data-submit="submit" class="page-section">
    <div class="col col-half">
        <div class="form-group">
            <label for="name" class="required">{{i18n.name}}</label>

            <div class="group">
                <input type="text" id="name" name="name" class="form-control" data-bind data-focus/>

                <div class="help-block" data-validation="name"></div>
            </div>
        </div>
        <div class="form-group">
            <label for="currency" class="required">{{i18n.currency}}</label>

            <div class="group">
                <input type="hidden" id="currency" name="currency" class="form-control half" data-id="currencySelect"
                       data-placeholder="{{i18n.selectCurrency}}" data-bind/>

                <div class="help-block" data-validation="currency"></div>
            </div>
        </div>
        <div class="form-group no-bottom border" data-region="columnWrapper"></div>
    </div>
    <div class="actions">
        <div class="clearfix">
            <button type="submit" class="btn btn-primary" data-auto-disable>
				{{#if isNew}}
					{{i18n.create}}
				{{else}}
					{{i18n.save}}
				{{/if}}
            </button>
            <a href="/templates" class="btn btn-link">{{i18n.cancel}}</a>
        </div>
    </div>
</form>
