<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <label for="email">Логин</label>
                    <input type="email" id="login" name="login" data-value="model.login" class="form-control"
                           autofocus/>
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" id="password" name="password" data-value="model.password"
                           class="form-control"/>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>
