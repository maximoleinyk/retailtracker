<div class="box">
    <div class="box-title">{{i18n.enterCompany}}</div>
    <div class="alert alert-warning" data-validate="generic" data-bind data-hide></div>
	{{#if hasCompanies}}
        <form data-submit="enter">
            <div class="form-group">
                <label for="companyId">{{i18n.companyName}}</label>
                <input type="hidden" id="companyId" name="companyId" class="form-control" data-id="companySelect"
                       data-bind/>
            </div>
            <div class="form-group submit-group">
                <button type="submit" class="btn btn-primary btn-lg" title="{{i18n.goToCompany}}" data-auto-disable
                        data-focus>{{i18n.enter}}</button>
            </div>
        </form>
	{{else}}
        <p>{{i18n.youHaveNoCompanies}}</p>
	{{/if}}
</div>
