<div class="page-title">
    <div class="title">
        <div>
			{{#if isNew}}
				{{i18n.companyCreation}}
			{{else}}
				{{i18n.companyEditing}}
                <div class="actions">
                    <a href="/company/{{id}}/employees" data-toggle="tooltip" data-placement="top"
                       title="{{i18n.employees}}">
                        <span class="fa fa-users"></span>
                    </a>
                </div>
			{{/if}}
        </div>
        <a href="/companies" class="link-back">{{i18n.myCompanies}}</a>
    </div>
</div>
<form data-submit="submit" class="page-section">
    <div class="col col-half">
        <div class="form-group">
            <label for="name">{{i18n.name}}</label>

            <div class="group">
                <input type="text" id="name" name="name" class="form-control" data-bind data-focus/>

                <div class="help-block" data-validate="name" data-bind></div>
            </div>
        </div>
        <div class="form-group">
            <label for="currencyCode">{{i18n.currencyCode}}</label>

            <div class="group">
                <select id="currencyCode" class="form-control half" name="currencyCode" data-id="select" data-bind>
					{{#each currencyCodes}}
                        <option value="{{id}}">{{text}}</option>
					{{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="currencyRate">{{i18n.currencyRate}}</label>

            <div class="group">
                <input type="text" id="currencyRate" name="currencyRate" class="form-control half" data-bind
                       readonly/>
            </div>
        </div>
        <div class="form-group no-bottom border">
            <label for="description">{{i18n.description}}</label>

            <div class="group">
                <textarea id="description" name="description" rows="5" class="form-control" data-bind></textarea>
            </div>
        </div>
        <div data-region="inviteeList"></div>
    </div>
    <div class="actions">
        <div class="clearfix">
            <button type="submit" class="btn btn-primary" data-auto-disable>
				{{#if isNew}}
					{{i18n.create}}
				{{else}}
					{{i18n.save}}
				{{/if}}
            </button>
            <a href="{{url}}" class="btn btn-link">{{i18n.cancel}}</a>
        </div>
    </div>
</form>
