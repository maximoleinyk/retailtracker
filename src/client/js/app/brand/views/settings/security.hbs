<div class="alert alert-warning" data-validation="generic" data-hide></div>
<form class="form-horizontal" data-submit="save">
    <fieldset>
        <legend>{{i18n.security}}</legend>
        <div class="form-group">
            <label for="oldPassword" class="col-sm-3 control-label">{{i18n.currentPassword}}</label>

            <div class="col-sm-5">
                <input type="password" class="form-control" id="oldPassword" name="oldPassword" data-bind
                       autofocus/>

                <div class="help-block" data-validation="oldPassword"></div>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-3 control-label">{{i18n.newPassword}}</label>

            <div class="col-sm-5">
                <input type="password" class="form-control" id="password" name="password" data-bind>

                <div class="help-block" data-validation="password"></div>
            </div>
        </div>
        <div class="form-group">
            <label for="confirmPassword" class="col-sm-3 control-label">{{i18n.confirmPassword}}</label>

            <div class="col-sm-5">
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" data-bind>

                <div class="help-block" data-validation="confirmPassword"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-3">
                <button type="submit" class="btn btn-success" data-auto-disable>{{i18n.change}}</button>
            </div>
        </div>
    </fieldset>
</form>
