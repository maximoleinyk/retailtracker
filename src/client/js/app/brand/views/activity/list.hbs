{{#each groups}}
    <div class="activity-group">
        <span class="date-icon fa fa-dot-circle-o"></span> <span class="activity-group-title">{{date @key}}</span>
    </div>
    <ul class="activity-items">
        {{#each this}}
            <li>
                <span class="activity-item-time">{{time dateTime}}</span> <strong class="nowrap">{{ formatUser user }}</strong> {{{action}}}
            </li>
        {{/each}}
    </ul>
{{/each}}